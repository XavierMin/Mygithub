.home{
  height: 100%;
  width: 100%;
  background-color: #E3E3E3;
  position: absolute;
  top: 0;
  bottom: 0;
}
.userInfo{
  background-color:white;
  margin-top: 20rpx;
  height: 200rpx;
}
.userAvatar{
  width: 150rpx;
  height: 150rpx;
  margin: 25rpx 40rpx 0 20rpx;
}
.username{
  position: absolute;
  top: 60rpx;
}
.bind{
  width: 200rpx;
  font-size: 30rpx;
  background-color: #E3E3E3;
  display: inline-block;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 120rpx;
  margin-top: 10rpx;
}
.qrCode{
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-top: 50rpx;
  margin-right: 50rpx;
}
.mycarInfo{
  width: 100%;
  height: 80rpx;
  background-color: white;
  margin: 20rpx 0;
  padding: 20rpx 0 0 40rpx;
  font-size:30rpx;
}
.homeImg{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.myInfoText{
  display: inline-block;
  height: 80rpx;
  vertical-align: middle;
}
.myInfoList{
  width: 100%;
  background-color: white;
}
.myInfoList:last-child{
  border: 0;
}
.myInfoListContent{
  width: 90%;
  height: 80rpx;
  background-color: white;
  padding: 20rpx 0 0 20rpx;
  font-size:30rpx;
  border-bottom: 1px solid #EBEBEB;
  margin: 0 20rpx 0 20rpx;
}
.setting{
  width: 100%;
  height: 80rpx;
  background-color: white;
  margin-top: 20rpx;
}
.settingStyle{
  width: 100%;
  margin-left: 0rpx;
  padding-left: 40rpx;
}
.authorize{
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  margin-left: 15rpx;
  background-color: white;
  margin-left: -30rpx;
  padding-left: 70rpx;
}
.notShowAuthorize{
  display: none;
}